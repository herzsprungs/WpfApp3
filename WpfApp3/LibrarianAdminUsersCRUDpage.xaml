<Page x:Class="WpfApp3.LibrarianAdminUsersCRUDpage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp3"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LibrarianAdminUsersCRUDpage">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Add Section -->
        <Border Margin="0,0,0,10" Background="#F8F9FA" Padding="10" CornerRadius="5">
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="txtNewId" Width="120" Margin="5" />
                <PasswordBox x:Name="txtNewPass" Width="150" Margin="5" />
                <TextBox x:Name="txtNewName" Width="200" Margin="5" />
                <ComboBox x:Name="cmbRole" Width="150" Margin="5" SelectedIndex="0">
                    <ComboBoxItem Content="Admin"/>
                    <ComboBoxItem Content="Librarian"/>
                    <ComboBoxItem Content="Student"/>
                </ComboBox>
                <Button Content="ADD" Style="{StaticResource ModernButton}" Width="100"/>
            </StackPanel>
        </Border>

        <!-- Edit Section -->
        <Border Grid.Row="1" Margin="0,0,0,10" Background="#F8F9FA" Padding="10" CornerRadius="5">
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="txtEditId" Width="120" Margin="5" IsEnabled="False"/>
                <PasswordBox x:Name="txtEditPass" Width="150" Margin="5"/>
                <TextBox x:Name="txtEditName" Width="200" Margin="5" />
                <ComboBox x:Name="cmbEditRole" Width="150" Margin="5" IsEnabled="False"/>
                <Button Content="SAVE" Style="{StaticResource ModernButton}" Width="100"/>
            </StackPanel>
        </Border>

        <!-- Data Grid -->
        <DataGrid Grid.Row="2" Margin="0,0,0,10" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Id}" Width="1*"/>
                <DataGridTextColumn Binding="{Binding Name}" Width="2*"/>
                <DataGridTextColumn Binding="{Binding Role}" Width="1*"/>
                <DataGridTemplateColumn Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="EDIT" Style="{StaticResource GridActionButton}"/>
                                <Button Content="DEL" Style="{StaticResource GridActionButton}"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Action Bar -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="EXPORT" Style="{StaticResource ModernButton}" Width="100"/>
            <Button Content="CLOSE" Style="{StaticResource ModernButton}" Width="100" Margin="10,0,0,0"/>
        </StackPanel>
    </Grid>
</Page>