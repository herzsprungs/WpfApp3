<Page x:Class="WpfApp3.ClericalViewLibraryTimeInTimeOut"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp3"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ClericalViewLibraryTimeInTimeOut">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0">
            <TextBlock Text="Employee Time Tracking" 
                     FontSize="24" FontWeight="SemiBold"
                     Foreground="{StaticResource PrimaryBrush}"/>
            <TextBlock Text="Manage staff attendance and working hours"
                     Foreground="#7F8C8D" Margin="0 5 0 15"/>
        </StackPanel>

        <!-- Time Records Table -->
        <DataGrid Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True"
                Margin="0 0 0 10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Employee ID" Binding="{Binding EmployeeId}" Width="1*"/>
                <DataGridTextColumn Header="Name" Binding="{Binding EmployeeName}" Width="2*"/>
                <DataGridTextColumn Header="Date" Binding="{Binding Date, StringFormat=d}" Width="1*"/>
                <DataGridTextColumn Header="Time In" Binding="{Binding TimeIn, StringFormat=t}" Width="1*"/>
                <DataGridTextColumn Header="Time Out" Binding="{Binding TimeOut, StringFormat=t}" Width="1*"/>
                <DataGridTemplateColumn Header="Status" Width="0.8*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Status}" 
                                     
                                     HorizontalAlignment="Center"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Time Entry Form -->
        <Border Grid.Row="2" Background="#F8F9FA" CornerRadius="8" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <DatePicker x:Name="dpDate" Grid.Column="0" Margin="5" Width="120"/>
                <TextBox x:Name="txtEmployeeId" Grid.Column="1" Margin="5" 
                       />
                <TextBox x:Name="txtEmployeeName" Grid.Column="2" Margin="5" 
                         Grid.ColumnSpan="2"/>
                <Button Content="⏰ Time In" Grid.Column="4" 
                      Style="{StaticResource ModernButton}" Background="#2ECC71"
                      Margin="5" Width="100" />
                <Button Content="⏰ Time Out" Grid.Column="5"
                      Style="{StaticResource ModernButton}" Background="#E74C3C"
                      Margin="5" Width="100" />
            </Grid>
        </Border>
    </Grid>
</Page>
