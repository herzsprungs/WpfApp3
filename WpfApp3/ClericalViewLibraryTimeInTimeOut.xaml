<Page x:Class="WpfApp3.ClericalViewLibraryTimeInTimeOut"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp3"
      mc:Ignorable="d" 
     d:DesignHeight="450" d:DesignWidth="800"
      Title="ClericalViewLibraryTimeInTimeOut"
      Background="#f5f5f5">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header with Library Logo and Title -->
        <Border Grid.Row="0" Background="#3498db" Padding="20 15">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="📚" FontSize="28" VerticalAlignment="Center" Margin="0,0,15,0"/>
                <TextBlock Text="Campus Library" FontSize="24" FontWeight="SemiBold" Foreground="White"/>
            </StackPanel>
        </Border>

        <!-- Page Title and Description -->
        <Border Grid.Row="1" Background="White" Padding="20" Margin="0,2,0,0">
            <StackPanel>
                <TextBlock Text="Student Time Tracking" FontSize="22" FontWeight="Medium" Foreground="#2c3e50"/>
                <TextBlock Text="Monitor student library visits and attendance" FontSize="14" Foreground="#7f8c8d" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Main Content Area -->
        <Border Grid.Row="2" Background="White" Margin="20,15" Padding="30" CornerRadius="8" BorderBrush="#e0e0e0" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Filter Controls -->
                <Grid Grid.Row="0" Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Date:" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="Medium"/>
                        <DatePicker Width="130" Margin="0,0,15,0" BorderBrush="#bdc3c7"/>

                        <TextBlock Text="Status:" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="Medium"/>
                        <ComboBox Width="120" BorderBrush="#bdc3c7">
                            <ComboBoxItem Content="All"/>
                            <ComboBoxItem Content="Checked In"/>
                            <ComboBoxItem Content="Checked Out"/>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <Button Content="🔍 Search" Background="#3498db" Foreground="White" Padding="15,8" Margin="0,0,10,0" BorderThickness="0">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="4"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                        <Button Content="↻ Refresh" Background="#7f8c8d" Foreground="White" Padding="15,8" BorderThickness="0">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="4"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                    </StackPanel>
                </Grid>

                <!-- Student Time Records DataGrid -->
                <DataGrid Grid.Row="1" AutoGenerateColumns="False"
                         IsReadOnly="True"
                         HeadersVisibility="Column"
                         GridLinesVisibility="Horizontal"
                         AlternatingRowBackground="#f9f9f9"
                         BorderBrush="#bdc3c7" BorderThickness="1"
                         RowHeaderWidth="0">
                    <DataGrid.Resources>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#ecf0f1"/>
                            <Setter Property="Foreground" Value="#2c3e50"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="Padding" Value="10,8"/>
                            <Setter Property="BorderThickness" Value="0,0,0,1"/>
                            <Setter Property="BorderBrush" Value="#bdc3c7"/>
                        </Style>
                        <Style TargetType="DataGridCell">
                            <Setter Property="Padding" Value="10,8"/>
                            <Setter Property="BorderThickness" Value="0"/>
                        </Style>
                    </DataGrid.Resources>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Student ID" Binding="{Binding StudentId}" Width="0.8*"/>
                        <DataGridTextColumn Header="Name" Binding="{Binding StudentName}" Width="1.5*"/>
                        <DataGridTextColumn Header="Date" Binding="{Binding Date, StringFormat=d}" Width="0.8*"/>
                        <DataGridTextColumn Header="Time In" Binding="{Binding TimeIn, StringFormat=t}" Width="0.8*"/>
                        <DataGridTextColumn Header="Time Out" Binding="{Binding TimeOut, StringFormat=t}" Width="0.8*"/>
                        <DataGridTextColumn Header="Duration" Binding="{Binding Duration}" Width="0.8*"/>
                        <DataGridTemplateColumn Header="Status" Width="0.8*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Background="{Binding StatusColor}" CornerRadius="4" Padding="5,3" HorizontalAlignment="Center">
                                        <TextBlock Text="{Binding Status}" Foreground="White" FontWeight="Medium" HorizontalAlignment="Center"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="Actions" Width="1*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Content="Check In" Background="#27ae60" Foreground="White" Padding="8,3" Margin="0,0,5,0"
                                                Visibility="{Binding ShowCheckIn}" BorderThickness="0">
                                            <Button.Resources>
                                                <Style TargetType="Border">
                                                    <Setter Property="CornerRadius" Value="4"/>
                                                </Style>
                                            </Button.Resources>
                                        </Button>
                                        <Button Content="Check Out" Background="#e74c3c" Foreground="White" Padding="8,3"
                                                Visibility="{Binding ShowCheckOut}" BorderThickness="0">
                                            <Button.Resources>
                                                <Style TargetType="Border">
                                                    <Setter Property="CornerRadius" Value="4"/>
                                                </Style>
                                            </Button.Resources>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Manual Entry Form -->
                <Border Grid.Row="2" Background="#f9f9f9" CornerRadius="5" Padding="15" Margin="0,15,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Manual Time Entry" FontWeight="Medium" Margin="0,0,0,10"/>

                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="Student ID:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <TextBox Grid.Column="1" Height="30" Padding="10,5" BorderBrush="#bdc3c7" BorderThickness="1" Margin="0,0,15,0"/>

                            <TextBlock Grid.Column="2" Text="Student Name:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <TextBox Grid.Column="3" Height="30" Padding="10,5" BorderBrush="#bdc3c7" BorderThickness="1" Margin="0,0,15,0"/>

                            <Button Grid.Column="4" Content="⏰ Time In" Background="#27ae60" Foreground="White" 
                                    Padding="15,8" Margin="0,0,10,0" BorderThickness="0">
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="4"/>
                                    </Style>
                                </Button.Resources>
                            </Button>

                            <Button Grid.Column="5" Content="⏰ Time Out" Background="#e74c3c" Foreground="White" 
                                    Padding="15,8" BorderThickness="0">
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="4"/>
                                    </Style>
                                </Button.Resources>
                            </Button>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- Footer -->
        <Border Grid.Row="3" Background="#34495e" Padding="15">
            <TextBlock Text="© 2025 Campus Library System" FontSize="12" Foreground="White" HorizontalAlignment="Center"/>
        </Border>
    </Grid>
</Page>
