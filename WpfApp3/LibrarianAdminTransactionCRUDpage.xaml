<Page x:Class="WpfApp3.LibrarianAdminTransactionCRUDpage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp3"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LibrarianAdminTransactionCRUDpage">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Controls -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <DatePicker x:Name="dpStart" Margin="5" Width="150"/>
            <DatePicker x:Name="dpEnd" Margin="5" Width="150"/>
            <Button Content="FILTER" Style="{StaticResource ModernButton}" Width="100"/>
        </StackPanel>

        <!-- Data Grid -->
        <DataGrid Grid.Row="1" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding TransactionId}" Width="1*"/>
                <DataGridTextColumn Binding="{Binding BookTitle}" Width="3*"/>
                <DataGridTextColumn Binding="{Binding StudentName}" Width="2*"/>
                <DataGridTextColumn Binding="{Binding BorrowDate}" Width="1.5*"/>
                <DataGridTextColumn Binding="{Binding DueDate}" Width="1.5*"/>
                <DataGridTemplateColumn Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="RETURN" Style="{StaticResource GridActionButton}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
