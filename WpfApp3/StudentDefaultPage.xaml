<Page x:Class="WpfApp3.StudentDefaultPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp3"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StudentDefaultPage">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Welcome Section -->
        <StackPanel>
            <TextBlock x:Name="txtWelcome" Text="Welcome, Student!" 
                     FontSize="24" Foreground="#2C3E50" FontWeight="Bold"/>
            
                     
        </StackPanel>

        <!-- Dashboard Content -->
        <Grid Grid.Row="1" Margin="0 20 0 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Column -->
            <StackPanel>
                <Border Background="White" CornerRadius="10" Padding="15" Margin="0 0 15 0">
                    <StackPanel>
                        <TextBlock Text="📚 Your Borrowed Books" FontSize="18" Margin="0 0 0 10"/>
                        <ListBox x:Name="lstBorrowedBooks">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <TextBlock Text="{Binding Title}" FontWeight="Bold"/>
                                        <TextBlock Text="{Binding DueDate, StringFormat='Due: {0:MMM dd}'}" 
                                                 Foreground="#7F8C8D"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Right Column -->
            <StackPanel Grid.Column="1">
                <Border Background="#3498DB" CornerRadius="10" Padding="15">
                    <StackPanel>
                        <TextBlock Text="📅 Library Schedule" Foreground="White" FontSize="18"/>
                        <Calendar x:Name="calendar" Background="Transparent" 
                                 Foreground="White" BorderThickness="0"/>
                    </StackPanel>
                </Border>

                <Border Background="#2C3E50" CornerRadius="10" Padding="15" Margin="0 15 0 0">
                    <TextBlock Text="'The library is the temple of learning.' - Unknown"
                             Foreground="White" FontStyle="Italic" TextWrapping="Wrap"/>
                </Border>
            </StackPanel>
        </Grid>
    </Grid>
</Page>