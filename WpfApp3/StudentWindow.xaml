<Window x:Class="WpfApp3.StudentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="Student Dashboard" Height="650" 
        Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResize">

    <Window.Resources>
        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#3498db"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2980b9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1f618d"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Active Button Style -->
        <Style x:Key="ActiveButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#2ecc71"/>
        </Style>

        <!-- Window Control Button Style -->
        <Style x:Key="WindowControlButton" TargetType="Button">
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="15">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#33ffffff"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border CornerRadius="15" Background="#f0f3f5">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="260"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Sidebar with video background -->
            <Border CornerRadius="15,0,0,15" ClipToBounds="True">
                <Grid>
                    <!-- Background Video with Blur -->
                    <MediaElement x:Name="BackgroundVideo" 
                                  Source="C:\Users\23-0144c\Downloads\7513671-uhd_3840_2160_24fps (1).mp4" 
                                  Stretch="UniformToFill"
                                  LoadedBehavior="Play"
                                  Volume="0">
                        <MediaElement.Effect>
                            <BlurEffect Radius="10" />
                        </MediaElement.Effect>
                    </MediaElement>

                    <!-- Dark Overlay for better readability -->
                    <Border Background="#80000000"/>

                    <!-- Sidebar Content -->
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="120"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="100"/>
                        </Grid.RowDefinitions>

                        <!-- Logo and Title -->
                        <StackPanel VerticalAlignment="Center" Margin="20,20,20,10">
                            <TextBlock Text="STUDENTS USERS" FontWeight="Bold" FontSize="22" Foreground="White" Width="233"/>
                            <TextBlock Text="Management System" FontSize="14" Foreground="#ccffffff" Margin="0,5,0,0" Width="232"/>
                        </StackPanel>

                        <!-- Navigation Menu -->
                        <StackPanel Grid.Row="1" Margin="15,20">
                            <TextBlock Text="MENU" Foreground="#99ffffff" FontSize="12" Margin="5,0,0,15"/>

                            <Button Style="{StaticResource ModernButton}" 
                                    Content="📚  Available Books" 
                                    Margin="0,10" 
                                    Tag="AvailableBooks"
                                    Click="NavButton_Click"
                                    x:Name="BooksButton"/>

                            <Button Style="{StaticResource ModernButton}" 
                                    Content="⏱️  Library Visits" 
                                    Margin="0,10" 
                                    Tag="LibraryVisits"
                                    Click="NavButton_Click"
                                    x:Name="VisitsButton"/>

                            <Button Style="{StaticResource ModernButton}" 
                                    Content="📖  Borrow Books" 
                                    Margin="0,10" 
                                    Tag="BorrowBooks"
                                    Click="NavButton_Click"
                                    x:Name="BorrowButton"/>
                        </StackPanel>

                        <!-- Logout Button -->
                        <Button Grid.Row="2" 
                                Style="{StaticResource ModernButton}" 
                                Content="🚪  Logout" 
                                Background="#e74c3c"
                                Click="Logout_Click"
                                Margin="15,0,15,30"/>
                    </Grid>
                </Grid>
            </Border>

            <!-- Main Content Area -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Top Bar -->
                <Border Background="Transparent" BorderThickness="0,0,0,1" BorderBrush="#20000000">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="120"/>
                        </Grid.ColumnDefinitions>

                        <!-- Page Title -->
                        <TextBlock x:Name="PageTitle" 
                                   Text="Dashboard" 
                                   FontSize="20" 
                                   FontWeight="SemiBold" 
                                   VerticalAlignment="Center"
                                   Margin="20,0"/>


                    </Grid>
                </Border>

                <!-- Main Content Frame -->
                <Frame x:Name="MainFrame" 
                       Grid.Row="1" 
                       NavigationUIVisibility="Hidden"
                       Margin="20"/>
            </Grid>

            <!-- Make the top bar draggable -->
            <Border Grid.Column="1" 
                    Background="Transparent" 
                    Height="60" 
                    VerticalAlignment="Top" 
                    />
        </Grid>
    </Border>
</Window>