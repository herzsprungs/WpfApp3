<Window x:Class="WpfApp3.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="Login" Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="Transparent">

    <Window.Resources>
        <!-- Elegant Button Style -->
        <Style x:Key="ElegantButton" TargetType="Button">
            <Setter Property="Background" Value="#2C3E50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Segoe UI Light"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20 12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5"
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#34495E"/>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1.02" ScaleY="1.02"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Elegant TextBox Style -->
        <Style x:Key="ElegantTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="BorderBrush" Value="#E9ECEF"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Padding" Value="10,12"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
            <Setter Property="Foreground" Value="#495057"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#3498DB"/>
                    <Setter Property="BorderThickness" Value="0,0,0,2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Elegant PasswordBox Style -->
        <Style x:Key="ElegantPasswordBox" TargetType="PasswordBox">
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="BorderBrush" Value="#E9ECEF"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Padding" Value="10,12"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
            <Setter Property="Foreground" Value="#495057"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#3498DB"/>
                    <Setter Property="BorderThickness" Value="0,0,0,2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Role Button Styles -->
        <Style x:Key="RoleButton" TargetType="Button" BasedOn="{StaticResource ElegantButton}">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Opacity" Value="0.85"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="1"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border CornerRadius="10" Background="White">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Side - Media & Logo -->
            <Border Grid.Column="0" CornerRadius="10,0,0,10" ClipToBounds="True">
                <Grid>
                    <MediaElement Source="C:\Users\reynm\Downloads\7513671-uhd_3840_2160_24fps.mp4" 
                                  Stretch="UniformToFill">
                        <MediaElement.Effect>
                            <BlurEffect Radius="5" />
                        </MediaElement.Effect>
                    </MediaElement>

                   
                </Grid>
            </Border>

            <!-- Right Side - Login Form -->
            <Border Grid.Column="1" CornerRadius="0,10,10,0" Background="White" Padding="40">
                <Grid>
                    <!-- Form Container -->
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Welcome Back" 
                                   FontSize="28" 
                                   FontWeight="Light"
                                   FontFamily="Segoe UI"
                                   Foreground="#2C3E50" 
                                   Margin="0,0,0,10"
                                   HorizontalAlignment="Center"/>

                        <TextBlock Text="Sign in to continue" 
                                   FontSize="14" 
                                   FontWeight="Regular"
                                   Foreground="#95A5A6" 
                                   Margin="0,0,0,30"
                                   HorizontalAlignment="Center"/>

                        <TextBlock Text="USERNAME" 
                                   FontSize="11" 
                                   FontWeight="SemiBold"
                                   Foreground="#95A5A6" 
                                   Margin="0,0,0,5"/>

                        <TextBox x:Name="txtUsername" 
                                Style="{StaticResource ElegantTextBox}"
                                Margin="0,0,0,20">
                            <TextBox.InputBindings>
                                <KeyBinding Key="Enter" Command="{Binding LoginCommand}"/>
                            </TextBox.InputBindings>
                        </TextBox>

                        <TextBlock Text="PASSWORD" 
                                   FontSize="11" 
                                   FontWeight="SemiBold"
                                   Foreground="#95A5A6" 
                                   Margin="0,0,0,5"/>

                        <PasswordBox x:Name="txtPassword" 
                                     Style="{StaticResource ElegantPasswordBox}"
                                     Margin="0,0,0,25"/>

                        <Button x:Name="btnLogin" 
                                Content="SIGN IN" 
                                Style="{StaticResource ElegantButton}"
                                Background="#3498DB"
                                FontSize="13"
                                FontWeight="SemiBold"
                                Margin="0,15,0,30"
                                Height="45"
                                Click="btnLogin_Click">
                            <Button.Effect>
                                <DropShadowEffect ShadowDepth="1" 
                                                  BlurRadius="10" 
                                                  Opacity="0.3" 
                                                  Color="#3498DB"/>
                            </Button.Effect>
                        </Button>

                        <!-- Login Role Selection -->
                        <TextBlock Text="QUICK ACCESS" 
                                   FontSize="11" 
                                   FontWeight="SemiBold"
                                   Foreground="#95A5A6" 
                                   Margin="0,15,0,10"
                                   HorizontalAlignment="Center"/>

                        <UniformGrid Rows="1" Columns="3" Margin="0,10,0,0">
                            <Button Content="Student" 
                                    Style="{StaticResource RoleButton}"
                                    Background="#3498DB" 
                                    Click="StudentTest_Click"/>

                            <Button Content="Clerical" 
                                    Style="{StaticResource RoleButton}"
                                    Background="#2ECC71" 
                                    Click="ClericalTest_Click"/>

                            <Button Content="Librarian" 
                                    Style="{StaticResource RoleButton}"
                                    Background="#E74C3C" 
                                    Click="LibrarianTest_Click"/>
                        </UniformGrid>
                    </StackPanel>
                </Grid>
            </Border>
            <Image Margin="104,168,104,168" Source="/logintitleWithLogo.png" Stretch="Fill"/>
        </Grid>
    </Border>
</Window>