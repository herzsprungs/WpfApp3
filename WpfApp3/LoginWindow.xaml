<Window x:Class="WpfApp3.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="Login" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#2C3E50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20 10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" Opacity="0.3" ShadowDepth="2"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#34495E"/>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1.02" ScaleY="1.02"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#ECF0F1"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0 0 0 20"/>
        </Style>

        <Style TargetType="PasswordBox">
            <Setter Property="Background" Value="#ECF0F1"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0 0 0 20"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Side - University Graphic -->
        <Border Background="#3498DB" Grid.Column="0">
            <Grid>
                <Viewbox>
                    <StackPanel Margin="40" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Path Data="M12 3L1 9l4 2v6h2v-4h2v4h2V11l4-2-11-6zm0-3l11 6v12H1V6l11-6z" 
                              Fill="White" Stretch="Uniform" Width="100" Height="100"
                              RenderTransformOrigin="0.5,0.5">
                            <Path.RenderTransform>
                                <RotateTransform Angle="15"/>
                            </Path.RenderTransform>
                        </Path>
                        <TextBlock Text="Northville University" 
                                   Foreground="White" FontSize="28" FontWeight="Bold"
                                   Margin="0 20 0 0" TextAlignment="Center"
                                   FontFamily="Segoe UI"/>
                        <TextBlock Text="Library Management System" 
                                   Foreground="White" FontSize="18" 
                                   Margin="0 10 0 0" Opacity="0.9"
                                   TextAlignment="Center"
                                   FontFamily="Segoe UI"/>
                    </StackPanel>
                </Viewbox>
            </Grid>
        </Border>

        <!-- Right Side - Login Form -->
        <Grid Grid.Column="1" Background="White">
            <StackPanel VerticalAlignment="Center" Margin="40">
                <TextBlock Text="Welcome Back!" 
                         FontSize="24" FontWeight="SemiBold"
                         Foreground="#2C3E50" Margin="0 0 0 30"
                         HorizontalAlignment="Center"/>

                <TextBox x:Name="txtUsername" 
                        Tag="Username"
                        
                        Margin="0 0 0 20">
                    <TextBox.InputBindings>
                        <KeyBinding Key="Enter" Command="{Binding LoginCommand}"/>
                    </TextBox.InputBindings>
                </TextBox>

                <PasswordBox x:Name="txtPassword" 
                             Tag="Password"
                             Margin="0 0 0 30"/>

                <Button x:Name="btnLogin" Content="Sign In" 
                       Click="btnLogin_Click"
                       HorizontalAlignment="Stretch"/>

                <TextBlock Text="Forgot Password?" 
                         Foreground="#7F8C8D" Margin="0 20 0 0"
                         HorizontalAlignment="Center" Cursor="Hand"
                         MouseLeftButtonDown="ForgotPassword_MouseDown">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextDecorations" Value="None"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="#3498DB"/>
                                    <Setter Property="TextDecorations" Value="Underline"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </StackPanel>

            <!-- Animated Border Effect -->
            <Border BorderBrush="#3498DB" BorderThickness="0 0 0 3"
                    HorizontalAlignment="Stretch" VerticalAlignment="Top">
                <Border.Triggers>
                    <EventTrigger RoutedEvent="Loaded">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation From="0" To="1" Duration="0:0:1.5"
                                               Storyboard.TargetProperty="Opacity"/>
                                <ThicknessAnimation From="0 0 0 0" To="0 0 0 3" 
                                                   Duration="0:0:0.5"
                                                   Storyboard.TargetProperty="BorderThickness"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Border.Triggers>
            </Border>
        </Grid>
    </Grid>
</Window>