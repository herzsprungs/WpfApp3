<Window x:Class="WpfApp3.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="Login" Height="500" Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#2C3E50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20 10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" Opacity="0.3" ShadowDepth="2"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#34495E"/>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1.02" ScaleY="1.02"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#ECF0F1"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0 0 0 20"/>
        </Style>

        <Style TargetType="PasswordBox">
            <Setter Property="Background" Value="#ECF0F1"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0 0 0 20"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <MediaElement Source="C:\Users\23-0144c\Downloads\7513671-uhd_3840_2160_24fps (1).mp4" 
             Margin="-426,-384,262,-353" 
             Grid.ColumnSpan="2">
            <MediaElement.Effect>
                <BlurEffect Radius="7" />
                <!-- Adjust the Radius for more/less blur -->
            </MediaElement.Effect>
        </MediaElement>

        <!-- Right Side - Login Form -->
        <Grid Grid.Column="1" Background="White">
           
                <TextBlock Text="Welcome Back!" 
                         FontSize="24" FontWeight="SemiBold"
                         Foreground="#FF24313E" Margin="0 0 0 30"
                         HorizontalAlignment="Center"/>

                <TextBox x:Name="txtUsername" 
                        Tag="Username"
                        
                        Margin="0 0 0 20">
                    <TextBox.InputBindings>
                        <KeyBinding Key="Enter" Command="{Binding LoginCommand}"/>
                    </TextBox.InputBindings>
                </TextBox>

                <PasswordBox x:Name="txtPassword" 
                             Tag="Password"
                             Margin="0 0 0 30"/>

                <Button x:Name="btnLogin" Content="Sign In" Margin="0,310,0,0"/>
            

            <!-- Animated Border Effect -->
            <Border BorderBrush="White" BorderThickness="0 0 0 3"
                    HorizontalAlignment="Stretch" VerticalAlignment="Top">
                <Border.Triggers>
                    <EventTrigger RoutedEvent="Loaded">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation From="0" To="1" Duration="0:0:1.5"
                                               Storyboard.TargetProperty="Opacity"/>
                                <ThicknessAnimation From="0 0 0 0" To="0 0 0 3" 
                                                   Duration="0:0:0.5"
                                                   Storyboard.TargetProperty="BorderThickness"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Border.Triggers>
            </Border>

            <!-- Testing Buttons -->


            <Button Content="Student" Style="{StaticResource ModernButton}" 
                              Background="#3498DB" Margin="171,389,153,37" Padding="15 8"
                              Click="StudentTest_Click"/>
            <Button Content="Clerical" Style="{StaticResource ModernButton}" 
                              Background="#2ECC71" Margin="267,388,51,25" Padding="15 8"
                              Click="ClericalTest_Click"/>
            <Button Content="Librarian" Style="{StaticResource ModernButton}" 
                              Background="#E74C3C" Margin="40,386,258,46" Padding="15 8"
                              Click="LibrarianTest_Click"/>




        </Grid>
        <Image Margin="66,71,66,78" Source="/logintitleWithLogo.png" Stretch="Fill"/>
    </Grid>
</Window>