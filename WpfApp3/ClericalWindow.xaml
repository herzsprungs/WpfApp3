<Window x:Class="WpfApp3.ClericalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="Clerical Dashboard" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top Navigation -->
        <WrapPanel Grid.Row="0" Background="#4CAF50" >
            <Button Content="📖 Available Books"  
                    Margin="5" Click="NavButton_Click"/>
            <Button Content="📊 Compile Reports" 
                    Margin="5" Click="NavButton_Click"/>
            <Button Content="💰 Calculate Fines" 
                    Margin="5" Click="NavButton_Click"/>
        </WrapPanel>

        <!-- Content Area -->
        <TabControl Grid.Row="1" Margin="20">
            <TabItem Header="Dashboard">
                <Grid>
                    <TextBlock Text="Clerical Operations Center" HorizontalAlignment="Center"
                               VerticalAlignment="Center" FontSize="24"/>
                </Grid>
            </TabItem>
            <TabItem Header="Statistics">
                <Grid>
                    <!-- Add charts/grids here later -->
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Logout -->
        <Button Content="🚪 Logout" Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Top"
                Margin="10" Padding="10 5" Click="btnLogout_Click" />
    </Grid>
</Window>
