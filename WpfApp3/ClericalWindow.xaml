<Window x:Class="WpfApp3.ClericalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="Clerical Dashboard" Height="500" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0" Background="{StaticResource PrimaryBrush}">
            <StackPanel>
                <Border Background="{StaticResource SecondaryBrush}" Padding="20">
                    <TextBlock Text="Clerical Portal" Foreground="White" FontSize="18" FontWeight="Bold"/>
                </Border>

                <Button Style="{StaticResource ModernButton}" Content="📚 Manage Books" Margin="10" Click="NavButton_Click" Tag="ManageBooks"/>
                <Button Style="{StaticResource ModernButton}" Content="💳 Process Loans" Margin="10" Click="NavButton_Click" Tag="ProcessLoans"/>
                <Button Style="{StaticResource ModernButton}" Content="⏱ Time Tracking" Margin="10" Click="NavButton_Click" Tag="TimeTracking"/>

                <Button Style="{StaticResource ModernButton}" Content="🚪 Logout" Margin="10 50 10 10" Click="Logout_Click"/>
            </StackPanel>
        </Border>

        <!-- Content Area -->
        <Frame x:Name="MainFrame" Grid.Column="1" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>