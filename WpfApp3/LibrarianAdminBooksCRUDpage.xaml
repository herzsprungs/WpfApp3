<Page x:Class="WpfApp3.LibrarianAdminBooksCRUDpage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp3"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LibrarianAdminBooksCRUDpage">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Quick Actions -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <TextBox x:Name="txtSearch" Width="300"  Margin="5"/>
            <Button Content="NEW BOOK" Style="{StaticResource ModernButton}" Width="120"/>
        </StackPanel>

        <!-- Data Grid -->
        <DataGrid Grid.Row="1" Margin="0,0,0,10" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding ISBN}" Width="1.5*"/>
                <DataGridTextColumn Binding="{Binding Title}" Width="3*"/>
                <DataGridTextColumn Binding="{Binding Author}" Width="2*"/>
                <DataGridTextColumn Binding="{Binding Year}" Width="1*"/>
                <DataGridTemplateColumn Width="120">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="LOGS" Style="{StaticResource GridActionButton}"/>
                                <Button Content="EDIT" Style="{StaticResource GridActionButton}"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Status Bar -->
        <TextBlock Grid.Row="2" Text="Total books: 1,234" HorizontalAlignment="Right"/>
    </Grid>
</Page>
